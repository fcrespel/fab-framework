<?php if ($this->pageCount > 1): ?>
<div class="paginationControl">

<!-- First page link -->
<?php if (isset($this->previous)): ?>
  <a class="page-item page-first" href="<?php echo $this->url(array('page' => $this->first)); ?>">First</a>
<?php else: ?>
  <span class="page-item page-first disabled">First</span>
<?php endif; ?>

<!-- Previous page link -->
<?php if (isset($this->previous)): ?>
  <a class="page-item page-previous" href="<?php echo $this->url(array('page' => $this->previous)); ?>">Previous</a>
<?php else: ?>
  <span class="page-item page-previous disabled">Previous</span>
<?php endif; ?>

<!-- Numbered page links -->
<?php foreach ($this->pagesInRange as $page): ?>
  <?php if ($page != $this->current): ?>
    <a class="page-item page-number" href="<?php echo $this->url(array('page' => $page)); ?>"><?php echo $page; ?></a>
  <?php else: ?>
    <span class="page-item page-current"><?php echo $page; ?></span>
  <?php endif; ?>
<?php endforeach; ?>

<!-- Next page link -->
<?php if (isset($this->next)): ?>
  <a class="page-item page-next" href="<?php echo $this->url(array('page' => $this->next)); ?>">Next</a>
<?php else: ?>
  <span class="page-item page-next disabled">Next</span>
<?php endif; ?>

<!-- Last page link -->
<?php if (isset($this->next)): ?>
  <a class="page-item page-last" href="<?php echo $this->url(array('page' => $this->last)); ?>">Last</a>
<?php else: ?>
  <span class="page-item page-last disabled">Last</span>
<?php endif; ?>

</div>
<?php endif; ?>